        public void LLenarTabla() {
        modelo.ClsTicket objTicket = new ClsTicket();
        //ClsDatosTicket objDts = new ClsDatosTicket();
        
        DefaultTableModel modelo;
        try {
            
            modelo = objTicket.Previsualizar(NumTicket);
            Tbl_datos.setModel(modelo);

        } catch (Exception e) {
            JOptionPane.showMessageDialog(null, "Error al cargar la informaci√≥n.");
        }
    }
        
