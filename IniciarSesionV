    private void IngresarActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_IngresarActionPerformed

        InicioS objInicio = new InicioS();
        ClsDatosUsuarios objDato = new ClsDatosUsuarios();
        objDato.setUsuario(txtUsuario.getText().toUpperCase());
        objDato.setContraseña(txtContra.getText().toUpperCase());

        if (objDato.getUsuario().isEmpty() || objDato.getContraseña().isEmpty()) {

            JOptionPane.showMessageDialog(null, "Por favor ingresar datos");

        } else {
            if (objInicio.Iniciar(objDato)) {

                if (objDato.getUsuario().trim().equals("EJECUTIVO")) {
                    vistas.Ventana conversor = new Ventana();
                    dispose();
                    conversor.setVisible(true);
                } else {
                    if (objDato.getUsuario().trim().equals("JEFEMESA")) {
                        vistas.VentanaJefe conversor = new VentanaJefe();
                        dispose();
                        conversor.setVisible(true);
                    } else {
                        JOptionPane.showMessageDialog(null, "Usuario o Contraseñas no encontradas");

                    }

                }

            } else {
                JOptionPane.showMessageDialog(null, "Usuario o Contraseñas no encontradas");

            }

        }

    }//GEN-LAST:event_IngresarActionPerformed

