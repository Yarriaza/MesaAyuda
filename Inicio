package controlador;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.util.logging.Level;
import java.util.logging.Logger;
import modelo.Conexion;


public class InicioS {

    ResultSet rs;
    private Conexion con = new Conexion();    
    private Connection cn = con.conexion();
        
    public boolean Iniciar(ClsDatosUsuarios ini) {
        try {
            
            PreparedStatement ps;
            ps = cn.prepareStatement("{Call InicioSesion (?,?)}");
            
            ps.setObject(1, ini.getUsuario());
            ps.setObject(2, ini.getContrase√±a());

            ResultSet rs = ps.executeQuery();
            
            if (rs.next()) {
                return true;

            }else {
                return false;                
            }
        } catch (SQLException e) {
            Logger.getLogger(ClsDatosUsuarios.class.getName()).log(Level.SEVERE, null, e);
            
            return false;
        }

    }
}
